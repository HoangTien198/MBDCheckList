                                                    <!-- Số lượng bản đầu (5 pcs trở lên) -->
                                                    <td scope="row"></td>
                                                    <td class="tabledit-view-mode">
                                                        @*<select data-fieldName="TestQuantityFirst" class="form-control">
                                                                <option value="1">OK</option>
                                                                <option value="2">NG</option>
                                                            </select>*@
                                                    </td>
                                                    <!-- end Số lượng bản đầu (5 pcs trở lên) -->
                                                    <!-- Chuyền trưởng kiểm tra -->
                                                    <td class="tabledit-view-mode text-center lineLeaderCheck">
                                                    </td>
                                                    <td class="tabledit-view-mode text-center">
                                                    </td>
                                                    <!-- end Chuyền trưởng kiểm tra -->
                                                    <!-- IPQC kiểm tra -->
                                                    <td class="tabledit-view-mode text-center iPQCCheck">
                                                    </td>
                                                    <td class="tabledit-view-mode text-center">
                                                    </td>
                                                    <!-- end IPQC kiểm tra -->
                                                </tr>

                                                <!-- Trạng thái đơn -->
                                                <tr>
                                                    <th class="text-center status-checklist" scope="row" colspan="4">(Status) Trạng thái đơn</th>
                                                    <td class="text-center lineLeaderCheck" colspan="2">
                                                    </td>
                                                    <td class="text-center iPQCCheck" colspan="2">
                                                    </td>

                                                    <!-- end Trạng thái đơn -->
                                                </tr>
                                                <!-- Ký xác nhận -->
                                                <tr>
                                                    <th class="text-center" scope="row" colspan="4">签名确认 Ký xác nhận</th>
                                                    <td class="tabledit-view-mode text-center lineLeaderCheckName" colspan="2">
                                                    </td>
                                                    <td class="tabledit-view-mode text-center iPQCCheckName" colspan="2">
                                                    </td>
                                                </tr>
                                                <!-- end Ký xác nhận -->
                                            </tbody>
                                        </table>
                                    </div>
                                </div>
                            </div>
                            <!-- Edit With Click card end -->
                        </div>
                    </div>
