            <div class="modal-body">
                <form action="" id="formAddCheckList">
                    <div class="row">
                        <div class="col-md-12">
                            <!-- Edit With Click card start -->
                            <div class="card">
                                <div class="card-header">
                                    <div class="row">
                                        <div class="col-md-3">
                                            <div class="form-group row">
                                                <label class="col-sm-3 col-form-label">M/O: </label>
                                                <div class="col-sm-9">
                                                    <input data-fieldName="MO" type="text" class="form-control form-control-normal" placeholder="">
                                                </div>
                                            </div>
                                        </div>
                                        <div class="col-md-5">

                                        </div>
                                        <div class="col-md-4">
                                            <div class="form-group row">
                                                <label class="col-sm-4 col-form-label">日期Thời gian: </label>
                                                <div class="col-sm-8">
                                                    <input data-fieldName="DateTECreated" type="datetime-local" class="form-control">
                                                </div>
                                            </div>
                                            <div class="form-group row">
                                                <label class="col-sm-4 col-form-label">班別Ca: </label>
                                                <div class="col-sm-8">
                                                    <select data-fieldname="ShiftWork" class="form-control">
                                                        <option value="1">Ngày</option>
                                                        <option value="2">Đêm</option>
                                                    </select>
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                </div>
