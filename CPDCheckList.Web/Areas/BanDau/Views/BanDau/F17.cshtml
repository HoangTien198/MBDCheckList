                                                    <td class="tabledit-view-mode">
                                                        <input data-fieldName="MaterialCode" class="tabledit-input form-control input-sm" type="text" name="First" value="">
                                                    </td>
                                                    <!-- end Mã liệu -->
                                                    <!-- Người thực hiện -->
                                                    <td scope="row">烧码員簽名<br />Người thực hiện</td>
                                                    <td class="tabledit-view-mode">
                                                        <input data-fieldName="TECreatedBy" readonly class="tabledit-input form-control input-sm" data-userid="@user.UserId" placeholder="Người đang đăng nhập" type="text" name="First" value="@user.UserCode - @user.UserFullName">
                                                    </td>
                                                    <!-- end Người thực hiện -->
                                                    <!-- Chuyền trưởng kiểm tra -->
                                                    <td class="tabledit-view-mode text-center lineLeaderCheck">
                                                    </td>
                                                    <td class="tabledit-view-mode text-center lineLeaderCheck">
                                                    </td>
                                                    <!-- end Chuyền trưởng kiểm tra -->
                                                    <!-- IPQC kiểm tra -->
                                                    <td class="tabledit-view-mode text-center iPQCCheck">
                                                    </td>
                                                    <td class="tabledit-view-mode text-center iPQCCheck">
                                                    </td>
                                                    <!-- end IPQC kiểm tra -->
                                                </tr>

                                                <tr>
                                                    <!-- Mã liệu của nhà sản xuất -->
                                                    <td scope="row">IC 型号<br />Quy cách IC</td>
                                                    <td class="tabledit-view-mode">
                                                        <input data-fieldName="MaterialCodeProducer" class="tabledit-input form-control input-sm" type="text" name="First" value="">
                                                    </td>
