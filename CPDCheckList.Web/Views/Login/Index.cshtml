    <main>
        <div class="container" id="container">
            <section class="section register d-flex">
                <div class="container">
                    <div class="row justify-content-center">
                        <div class="col-lg-4 col-md-6 d-flex flex-column align-items-center justify-content-center loginCard">
                            <div class="card mb-3">
                                <div class="card-body">
                                    <div class="d-flex justify-content-center pt-4">
                                        <!-- Logo -->
                                        <a href="#" class="logo d-flex align-items-center w-auto">
                                            <img src="~/Content/Image/fii-logo.jpg" alt="">
                                            <span class="d-none d-lg-block">Check List</span>
                                        </a>
                                    </div><!-- End Logo -->
                                    <div class="pb-2">
                                        <h5 class="card-title text-center pb-0 fs-4">Login to Your Account</h5>
                                        <p class="text-center small">Enter your Card ID & Password to login</p>
                                    </div>
                                    <div class="row g-3 needs-validation" id="LoginForm" novalidate>
                                        <div class="col-12">
                                            <label for="yourUsername" class="form-label">Card ID</label>
                                            <div class="input-group has-validation">
                                                <input id="username" type="text" name="user-name" class="form-control" placeholder="Vxxxxxxx" onkeypress="InputKeyPress(this)">
                                                <div class="invalid-feedback" id="cardIDFeedback">Please enter your Card ID.</div>
                                            </div>
                                        </div>

                                        <div class="col-12">
                                            <label for="yourPassword" class="form-label">Password</label>
                                            <div class="input-group has-validation">
                                                <input type="password" class="form-control" id="password" maxlength="20" placeholder="password.." onkeypress="InputKeyPress(this)">
                                                <div class="invalid-feedback" id="passwordFeedback">Please enter your password!</div>
                                            </div>
                                        </div>

                                        <div class="col-12">
                                            <div class="row">
                                                <div class="col-6">
                                                    <div class="form-check">
                                                        <input class="form-check-input" type="checkbox" name="remember" value="true" id="rememberMe">
                                                        <label class="form-label" for="rememberMe">Remember</label>
                                                    </div>
                                                </div>
                                                <div class="col-6 d-flex justify-content-end">
                                                    <p class="small mb-0"><a href="#">Forgot password?</a></p>
                                                </div>
                                            </div>
                                        </div>
                                        <div class="col-12 pb-2">
                                            <button class="btn btn-primary w-100" type="button" id="btnLogin">Login</button>
                                        </div>
                                        @*<div class="col-12">
                                                <p class="small mb-0">Don't have account? <a href="@Url.Action("Register", "Account", new { area = "" })">Regist now.</a></p>
                                            </div>*@
