@{
    Layout = null;
}

<!DOCTYPE html>
<html lang="en">

<head>
    <title>Special Data Management</title>

    <meta charset="utf-8">

    <!-- Favicons -->
    <link href="~/Content/Image/fii-logo.jpg" rel="icon">

    <!-- Required Fremwork -->
    <link href="~/Content/Template/NiceAdmin/vendor/bootstrap/css/bootstrap.min.css" rel="stylesheet" />

    <!-- sweet alert framework -->
    <link rel="stylesheet" type="text/css" href="..\files\bower_components\sweetalert\css\sweetalert.css">

    <link href="~/Content/StyleSheet/style.css" rel="stylesheet" />
    <link href="~/Content/StyleSheet/LoginStyle.css?v=@Guid.NewGuid()" rel="stylesheet" />

</head>

<body class="fix-menu">
    <div id="background"></div>
    @*<canvas class="background"></canvas>*@
    <main>
        <div class="container" id="container">
            <section class="section register d-flex">
                <div class="container">
                    <div class="row justify-content-center">
                        <div class="col-lg-4 col-md-6 d-flex flex-column align-items-center justify-content-center loginCard">
                            <div class="card mb-3">
                                <div class="card-body">
                                    <div class="d-flex justify-content-center pt-4">
                                        <!-- Logo -->
                                        <a href="https://10.220.130.116" class="logo d-flex align-items-center w-auto" target="_blank">
                                            <img src="~/Content/Image/fii-logo.jpg" alt="">
                                            <span class="d-none d-lg-block">MBD Platform</span>
                                        </a>
                                    </div><!-- End Logo -->

                                    <h5 class="card-title text-center pb-3 fs-4">SPECIAL DATA MANAGEMENT</h5>

                                    <div class="row g-3 needs-validation" id="LoginForm" novalidate>
                                        <div class="col-12 mt-0">
                                            <label for="yourUsername" class="form-label text-white">Card ID</label>
                                            <div class="input-group has-validation">
                                                <input id="username" type="text" name="user-name" class="form-control" placeholder="Vxxxxxxx" onkeypress="InputKeyPress(this)">
                                                <div class="invalid-feedback" id="cardIDFeedback">Please enter your Card ID.</div>
                                            </div>
                                        </div>

                                        <div class="col-12">
                                            <label for="yourPassword" class="form-label text-white">Password</label>
                                            <div class="input-group has-validation">
                                                <input type="password" class="form-control" id="password" maxlength="20" placeholder="password.." onkeypress="InputKeyPress(this)">
                                                <div class="invalid-feedback" id="passwordFeedback">Please enter your password!</div>
                                            </div>
                                        </div>

                                        <div class="col-12">
                                            <div class="row">
                                                <div class="col-6">
                                                    <div class="form-check">
                                                        <input class="form-check-input" type="checkbox" name="remember" value="true" id="rememberMe">
                                                        <label class="form-label text-white" for="rememberMe">Remember</label>
                                                    </div>
                                                </div>
                                                <div class="col-6 d-flex justify-content-end">
                                                    <p class="small mb-0"><a href="#">Forgot password?</a></p>
                                                </div>
                                            </div>
                                        </div>
                                        <div class="col-12 mb-1">
                                            <button class="btn btn-primary w-100" type="button" id="btnLogin">LOGIN YOUR ACCOUNT</button>
                                        </div>

                                        <p class="login-subtext text-center">OR</p>
                                        <div class="col-12 mt-0">
                                            <a class="btn btn-smartoffice w-100 d-flex justify-content-center mt-1" href="https://mbd-cns.myfiinet.com/Login/LoginSmartOffice?return_url=https://10.220.130.116:8888/Login/LoginCallback">
                                                <img src="/Content/Image/honhai-logo.png" style="height: 20px;width: 20px; margin-right: 5px;" />
                                                <span class="d-flex justify-content-center align-items-center">LOGIN SMART OFFICE</span>
                                            </a>
                                        </div>
                                        
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </section>
        </div>
    </main>
    <!-- loader page -->
    <div id="loader-page">
        <img src="@System.Configuration.ConfigurationManager.AppSettings["ImageLoadingSrc"]" />
    </div><!-- end loader page -->
    <!-- Required Jquery -->
    <script src="~/Content/Template/NiceAdmin/js/jquery-3.6.4.min.js"></script>
    <script src="~/files/bower_components/popper.js/js/popper.min.js"></script>
    <!-- Sweet Alert -->
    <script src="~/files/library/sweet-alert2/sweetalert2.all.min.js"></script>
    <script src="~/Content/Particles/particles.min.js"></script>

    <script src="~/Content/JavaScript/DynamicBackgroud.js"></script>

    <!-- page login js-->
    <script src="~/files/assets/js/common-pages.js"></script>
    <script src="~/files/assets/js/pages/login.js?v=@Guid.NewGuid()"></script>
</body>

</html>
